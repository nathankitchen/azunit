{
    //"extends": "../../tsconfig.json",
    "compilerOptions": {
        "module": "system",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "types": ["node"],
        "composite": true
    },
    "include": [
        "src/**/*.ts",
        "package.json"
    ], 
    "exclude": [
        "node_modules"
    ]
}