{
  "name": "azunit-lib",
  "version": "1.0.7",
  "description": "A reusable library containing the AzUnit test framework.",
  "main": "dist/src",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "@azure/arm-resources": "^4.0.0",
    "@azure/ms-rest-nodeauth": "^3.0.6",
    "jsonpath-plus": "^1.1.0",
    "xml-writer": "^1.7.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.19.6",
    "mocha": "^8.2.1",
    "mocha-typescript": "^1.1.17",
    "nyc": "^14.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha 'test/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathankitchen/azunit.git"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "unit",
    "test",
    "azure"
  ],
  "author": "Nathan Kitchen",
  "license": "MIT"
}
