{
  "name": "azunit",
  "version": "1.0.7",
  "description": "A lightweight unit testing framework for Microsoft Azure based on the ARM resource graphs.",
  "main": "dist/src/azunit.js",
  "bin": {
    "azunit": "dist/src/azunit.js"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "commander": "^6.2.0",
    "dotenv": "^8.2.0",
    "glob": "^7.1.6",
    "yaml": "^1.10.0",
    "azunit-lib": "../azunit-lib"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.19.8",
    "mocha": "^8.2.1",
    "mocha-typescript": "^1.1.17",
    "nyc": "^14.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7"
  },
  "scripts": {
    "build": "tsc && sudo npm install -g ./",
    "test": "nyc mocha 'test/**/*.spec.ts'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nathankitchen/azunit.git"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": false,
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "keywords": [
    "unit",
    "test",
    "azure"
  ],
  "author": "Nathan Kitchen",
  "license": "MIT"
}
